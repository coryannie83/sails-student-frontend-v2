<%- partial ('partials/statusmessage.ejs') %>

<h2>Manage Grade</h2>
<button class="btn btn-success" id="addgradeButton">Add Grade</button>
<table class="table table-striped table-bordered" id="gradeTable" style="width:100%">
  <thead>
    <tr>
      <th>ID</th>
      <th>Grade</th>
    </tr>
  </thead>
  <tbody>
  <% if(typeof grade != "undefined" && grade.length > 0){ %>
    <% grade.forEach(function(grade){ %>
      <tr>
        <td><%= grade.grade_id %></td>
        <td><%= grade.grade %></td>
        <td class="text-center">
          <button class="btn btn-primary" id="editButton" data-gradeid="<%= grade.grade_id %>">edit</button>
          <button class="btn btn-danger" id="deleteButton" data-gradeid="<%= grade.grade_id %>">delete</button>
        </td>
      </tr>
    <% }) %>
  <% } %>
  </tbody>
</table>

<div style="display: none;" id="deleteConfirm">Are you sure you want to delete this record?</div>

<form action="/delete_grade" method="POST" style="display: none;" id="deleteform">
  <input type="hidden" name="grade_id" value="eric">
</form>

<form style="display: none;" action="" method="POST" class="form-horizontal" id="managegradeForm">
  <input type="hidden" name="grade_id">
  <div class="form-group">
    <label for="grade_id" class="col-sm-2 control-label">Grade ID</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="grade_id" name="grade_id" placeholder="First Name" required>
    </div>
  </div>
  <div class="form-group">
    <label for="grade" class="col-sm-2 control-label">Grade</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="grade" name="grade"  placeholder="Last Name" required>
    </div>
  </div>
</form>
