<%- partial ('partials/statusmessage.ejs') %>

<h2>Manage Major Class</h2>
<button class="btn btn-success" id="addmajor_classButton">Add Major Class</button>
<table class="table table-striped table-bordered" id="major_classTable" style="width:100%">
  <thead>
    <tr>
      <th>ID</th>
      <th>Major ID</th>
      <th>Class ID</th>
    </tr>
  </thead>
  <tbody>
  <% if(typeof major_class != "undefined" && major_class.length > 0){ %>
    <% major_class.forEach(function(major_class){ %>
      <tr>
        <td><%= major_class.major_class_id %></td>
        <td><%= major_class.major_id %></td>
        <td><%= major_class.class_id %></td>
        <td class="text-center">
          <button class="btn btn-primary" id="editButton" data-major_classid="<%= major_class.major_class_id %>">edit</button>
          <button class="btn btn-danger" id="deleteButton" data-major_classid="<%= major_class.major_class_id %>">delete</button>
        </td>
      </tr>
    <% }) %>
  <% } %>
  </tbody>
</table>

<div style="display: none;" id="deleteConfirm">Are you sure you want to delete this record?</div>

<form action="/delete_major_class" method="POST" style="display: none;" id="deleteform">
  <input type="hidden" name="major_class_id" value="eric">
</form>

<form style="display: none;" action="" method="POST" class="form-horizontal" id="manageMajorClassForm">
  <input type="hidden" name="major_class_id">
  <div class="form-group">
    <label for="major_id" class="col-sm-2 control-label">First Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="major_id" name="major_id" placeholder="Major ID" required>
    </div>
  </div>
  <div class="form-group">
    <label for="class_id" class="col-sm-2 control-label">Last Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="class_id" name="class_id"  placeholder="Class ID" required>
    </div>
  </div>
</form>
