<%- partial ('partials/statusmessage.ejs') %>

<h2>Manage student_class Class</h2>
<button class="btn btn-success" id="addstudent_class_classButton">Add student_class Class</button>
<table class="table table-striped table-bordered" id="student_class_classTable" style="width:100%">
  <thead>
    <tr>
      <th>ID</th>
      <th>student_class ID</th>
      <th>Class ID</th>
    </tr>
  </thead>
  <tbody>
  <% if(typeof student_classs != "undefined" && student_classs.length > 0){ %>
    <% student_classs.forEach(function(student_class){ %>
      <tr>
        <td><%= student_class.student_class_id %></td>
        <td><%= student_class.student_id %></td>
        <td><%= student_class.class_id %></td>
        <td class="text-center">
          <button class="btn btn-primary" id="editButton" data-student_classid="<%= student_class.student_class_id %>">edit</button>
          <button class="btn btn-danger" id="deleteButton" data-student_classid="<%= student_class.student_class_id %>">delete</button>
        </td>
      </tr>
    <% }) %>
  <% } %>
  </tbody>
</table>

<div style="display: none;" id="deleteConfirm">Are you sure you want to delete this record?</div>

<form action="/delete_student_class" method="POST" style="display: none;" id="deleteform">
  <input type="hidden" name="student_class_id" value="eric">
</form>

<form style="display: none;" action="" method="POST" class="form-horizontal" id="managestudent_classForm">
  <input type="hidden" name="student_class_id">
  <div class="form-group">
    <label for="student_class_id" class="col-sm-2 control-label">Student Class ID</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="student_id" name="student_id" placeholder="Student Class ID" required>
    </div>
  </div>
  <div class="form-group">
    <label for="student_id" class="col-sm-2 control-label">Student ID</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="student_id" name="student_id"  placeholder="Last Name" required>
    </div>
  </div>
  <div class="form-group">
    <label for="class_id" class="col-sm-2 control-label">Start Date</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="class_id" name="class_id" placeholder="2017-01-01" required>
    </div>
  </div>
</form>
